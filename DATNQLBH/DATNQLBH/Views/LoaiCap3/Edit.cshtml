@model DATNQLBH.Models.CSDL.LoaiCap3

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Loại cấp 3</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LoaiCap3Id)
        @Html.HiddenFor(model=>model.PropertyNames)
        <div class="form-group">
            <div class="col-sm-9">
                <div class="form-material">
                    <label for="val-email2">Tên Loại Cấp 2</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tên Loại Cấp 3...." })
                    @*@Html.ValidationMessageFor(model=>model.AuthorName)*@
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-9">
                <div class="form-material">
                    <label for="val-skill2">Loại Cấp 2</label>
                    @Html.DropDownList("LoaiCap2Id", null, "--Chọn Loại Cấp 2--", new { @class = "form-control" })
                </div>
            </div>
        </div>

        


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
}

