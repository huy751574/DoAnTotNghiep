@model IEnumerable<DATNQLBH.Models.CSDL.QuyCach>

@{
    ViewBag.Title = "QuyCach";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<div class="block">
    <h2>Danh sách quy cách</h2>


    <div class="block-content block-content-full">
        <button class="btn btn-success" onclick="window.open('/Item/CreateQuyCach/');"  type="button">Thêm quy cách</button>
    </div>

    <div class="block-content">
        <!-- DataTables init on table by adding .js-dataTable-full class, functionality initialized in js/pages/base_tables_datatables.js -->
        <table class="table table-bordered table-striped js-dataTable-full">
            <thead>
                <tr class="bg-primary-lighter">
               
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th></th>
               
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Sửa quy cách" onclick="window.open('@Url.Action("EditQuyCach",new { id = item.QuyCachId  })')"><i class="fa fa-save"></i></button>

                        </td>
                  
                    </tr>
                }




            </tbody>
        </table>
    </div>
   
</div>