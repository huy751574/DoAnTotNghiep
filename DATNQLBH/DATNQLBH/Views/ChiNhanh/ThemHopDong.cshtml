@model DATNQLBH.Models.CSDL.HopDongChiNhanh

@{
    ViewBag.Title = "ThemHopDong";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<div>
    <div class="block-header">
        <h2>Thêm hợp đồng</h2>
    </div> 
    <div class="block-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
               
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                @Html.HiddenFor(model => model.MaCN)



                <div class="form-group">
                    @Html.LabelFor(model => model.MaLoaiGianHang, "Chọn gói chức năng", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MaLoaiGianHang", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaLoaiGianHang, "", new { @class = "text-danger" })
                    </div>
                </div>

             

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>