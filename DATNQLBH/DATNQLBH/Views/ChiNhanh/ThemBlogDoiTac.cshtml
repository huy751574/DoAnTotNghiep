@model DATNQLBH.Models.CSDL.BlogDoiTac

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<div>
    @using (Html.BeginForm("ThemBlogDoiTac","ChiNhanh",FormMethod.Post,new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="block">
            <div class="block-header">
                <ul class="block-options">
                    <li>
                        <button type="button"><i class="si si-settings"></i></button>
                    </li>
                </ul>
                <h3 class="block-title">Thêm bài viết quảng cáo phần mềm công ty và gian hàng sử dụng phần mềm </h3>
            </div>
            @Html.HiddenFor(model => model.MaCN)
            @Html.HiddenFor(model=>model.BlogID)
            @Html.TextAreaFor(model => model.Description, new { @style = "display:none" })
            <div>
                @Html.LabelFor(model => model.Title) :
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @style = "width:200px;outline:none" } })
               <br />
                @Html.LabelFor(model => model.Note) :
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @style = "width:200px;outline:none" } })
            </div>
            <hr />
            <section id="DescriptionContent">
                <div class="block-content block-content-full">
                    <!-- Summernote Container -->
                    <div class="js-summernote-air note-air-editor note-editable" id="note-editor-1" contenteditable="true">
                        @if (!String.IsNullOrEmpty(Model.Description))
                        { @Html.Raw(Model.Description); }
                        else {
                        <h3 class="h4 push">Thay đổi thông tin gian hàng tại khu vực này</h3>
                        }
                    </div>
                    <hr />
                    <br />
                    <strong>THÔNG TIN CHI TIẾT</strong>
                    <br />
                    @Html.LabelFor(model => model.ChiNhanh.Name):
                    @Html.DisplayFor(model => model.ChiNhanh.Name)
                    <div>
                        @Html.LabelFor(model => model.ChiNhanh.FaceBook):
                        @Html.DisplayFor(model => model.ChiNhanh.FaceBook)
                    </div>
                    <div>
                        @Html.LabelFor(model => model.ChiNhanh.WebSite):
                        @Html.DisplayFor(model => model.ChiNhanh.WebSite)
                    </div>
                    <div>
                        @Html.LabelFor(model => model.ChiNhanh.SDT):
                        @Html.DisplayFor(model => model.ChiNhanh.SDT)
                    </div>
                    <div>
                        @Html.LabelFor(model => model.ChiNhanh.Email):
                        @Html.DisplayFor(model => model.ChiNhanh.Email)
                    </div>
                    <hr />
                    <div>
                        <label for="file">Chọn ảnh đại diện</label>
                        <input type="file" id="file" name="file" value="Ảnh đại diện" />
                    </div>
                </div>

            </section>
        </div>
        <div class="text-center">
            <button class="btn btn-rounded btn-primary" type="submit">Lưu</button>
        </div>
    }
</div>

<script type="text/javascript">
   
    $('#note-editor-1').ckeditor(function () {
        CKFinder.setupCKEditor(this, '../Scripts/ckfinder/');
    });
    $('form').submit(function () {
        $('#note-editor-1').removeClass();
        var d = $('#note-editor-1').html();
        $('#Description').val(d);
        return true;
    });

